generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  STUDENT
  BUILDER
}

enum OAuthProvider {
  GOOGLE
}

enum PreferenceType {
  HIGHERS
  PLACEMENT
  BOTH
}

enum TestSessionStatus {
  ONGOING
  COMPLETED
}


model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  name         String?
  regNo        String?
  dept         String?
  role         UserRole       @default(STUDENT)
  provider     OAuthProvider?
  googleId     String?        @unique
  password     String? // Make optional for OAuth users
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @default(now())
  testSessions TestSession[]
  results      Result[]
  feedbacks    Feedback[]
}

model Feedback {
  id         Int            @id @default(autoincrement())
  userId     Int
  user       User           @relation(fields: [userId], references: [id])
  regNo      String
  rating     Int // 1-5
  feedback   String
  preference PreferenceType
  createdAt  DateTime       @default(now())

  @@index([userId])
}


model TestSession {
  id        Int  @id @default(autoincrement())

  userId    Int   @unique
  user      User  @relation(fields: [userId], references: [id])

  sessionCode String
  status      TestSessionStatus @default(ONGOING)

  startedAt   DateTime @default(now())
  completedAt DateTime?
  expiresAt   DateTime

  questions   TestSessionQuestion[]
  result      Result?

  @@index([sessionCode, status])
}

model TestSessionQuestion {
  sessionId  Int
  questionId Int
  order      Int

  session  TestSession @relation(fields: [sessionId], references: [id])
  question Question    @relation(fields: [questionId], references: [id])

  @@id([sessionId, questionId])
}

model ExamSession {
  id        Int      @id @default(autoincrement())
  startsAt  DateTime
  endsAt    DateTime
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Result {
  id        Int         @id @default(autoincrement())
  userId    Int
  sessionId Int         @unique // One result per session
  user      User        @relation(fields: [userId], references: [id])
  session   TestSession @relation(fields: [sessionId], references: [id])

  // Score fields
  totalPoints   Int @default(0) // 0-50
  aptitude      Int @default(0) // 0-10
  core          Int @default(0) // 0-20
  verbal        Int @default(0) // 0-5
  programming   Int @default(0) // 0-10
  comprehension Int @default(0) // 0-5

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([sessionId])
}

model LoginSession {
  id        Int       @id @default(autoincrement())
  code      String    @unique
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  expiresAt DateTime?
}

model Comprehension {
  id        Int        @id @default(autoincrement())
  passage   String
  questions Question[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Question {
  id          Int     @id @default(autoincrement())
  category    String
  subCategory String?
  question    String
  image       String?

  comprehensionId Int?
  comprehension   Comprehension? @relation(fields: [comprehensionId], references: [id])

  options Option[]

  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @default(now())
  testSessionQuestions TestSessionQuestion[]
}

model Option {
  id         Int      @id @default(autoincrement())
  questionId Int
  text       String
  isCorrect  Boolean  @default(false)
  question   Question @relation(fields: [questionId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Answer {
  id         Int      @id @default(autoincrement())
  sessionId  Int
  questionId Int
  optionId   Int // The option selected by the user
  isCorrect  Boolean  @default(false)
  createdAt  DateTime @default(now())

  @@unique([sessionId, questionId]) // One answer per question per session
  @@index([sessionId])
}

