generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  STUDENT
}

enum OAuthProvider {
  GOOGLE
}

model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  name         String?
  role         UserRole       @default(STUDENT)
  provider     OAuthProvider?
  googleId     String?        @unique
  password     String? // Make optional for OAuth users
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @default(now())
  testSessions TestSession[]
}

model TestSession {
  id     Int  @id @default(autoincrement())
  UserId Int
  user   User @relation(fields: [UserId], references: [id])

  StartedAt   DateTime              @default(now())
  CompletedAt DateTime?
  questions   TestSessionQuestion[]
}

model TestSessionQuestion {
  sessionId  Int
  questionId Int
  order      Int

  session  TestSession @relation(fields: [sessionId], references: [id])
  question Question    @relation(fields: [questionId], references: [id])

  @@id([sessionId, questionId])
}

model Comprehension {
  id        Int        @id @default(autoincrement())
  passage   String
  questions Question[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Question {
  id          Int     @id @default(autoincrement())
  category    String
  subCategory String?
  question    String
  image       String?

  comprehensionId Int?
  comprehension   Comprehension? @relation(fields: [comprehensionId], references: [id])

  options         Option[]
  correctOptionId Int

  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @default(now())
  testSessionQuestions TestSessionQuestion[]
}

model Option {
  id         Int      @id @default(autoincrement())
  questionId Int
  text       String
  question   Question @relation(fields: [questionId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

